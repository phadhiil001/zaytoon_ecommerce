<!-- app/views/carts/show.html.erb -->
<h1>Your Cart</h1>
<% if @cart_items.any? %>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td>
            <%= form_with url: update_cart_path(product), method: :put do %>
              <%= number_field_tag :quantity, @cart_items[product.id], min: 1 %>
              <%= submit_tag 'Update' %>
            <% end %>
          </td>
          <td><%= number_to_currency(product.price) %></td>
          <td><%= number_to_currency(product.price * @cart_items[product.id]) %></td>
          <td>
            <%= link_to 'Remove', remove_item_cart_path(product), method: :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Checkout', new_order_path %>
<% else %>
  <p>Your cart is empty.</p>
<% end %>
