<h1><%= @category.name %></h1>
<p><%= @category.description %></p>
<h2>Products</h2>
<% @products.each do |product| %>
  <div>
    <h3><%= link_to product.name, product_path(product) %></h3>
    <p><%= product.description %></p>
    <p><%= number_to_currency(product.price) %></p>
  </div>
<% end %>
