<!-- app/views/orders/index.html.erb -->
<h1>Your Orders</h1>
<% @orders.each do |order| %>
  <div>
    <h2>Order #<%= order.id %></h2>
    <p>Status: <%= order.status %></p>
    <p>Total Price: <%= number_to_currency(order.total_price) %></p>
    <%= link_to 'View Details', order_path(order) %>
  </div>
<% end %>
