<h1 class="text-2xl font-bold mb-4">Your Orders</h1>
<% @orders.each do |order| %>
  <div class="mb-4 p-4 border rounded-lg">
    <h2 class="text-xl font-bold">Order #<%= order.id %></h2>
    <p>Status: <%= order.status %></p>
    <p>Total Price: <%= number_to_currency(order.total_price) %></p>
    <%= link_to 'View Details', order_path(order), class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  </div>
<% end %>