<h1 class="text-2xl font-bold mb-4">Your Order</h1>
<div class="bg-white shadow-md rounded-lg p-4">
  <% @order_items.each do |item| %>
    <div class="flex items-center justify-between py-2 border-b">
      <div>
        <p class="font-semibold"><%= item.product.name %></p>
        <p><%= number_to_currency(item.price) %> x <%= item.quantity %></p>
        <%= form_with(model: [item.order, item], url: update_item_order_path(item), method: :patch, local: true) do |f| %>
          <div class="flex items-center space-x-2">
            <%= f.number_field :quantity, value: item.quantity, min: 1, class: "border rounded w-16 text-center" %>
            <%= f.submit "Update", class: "bg-blue-500 text-white px-2 py-1 rounded hover:bg-blue-700" %>
          </div>
        <% end %>
      </div>
      <div class="flex space-x-2">
        <%= link_to "Remove", remove_item_order_path(item), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500 hover:underline" %>
      </div>
    </div>
  <% end %>
</div>
<p class="text-xl font-bold mt-4">Total: <%= number_to_currency(@order.total_price) %></p>
<%= link_to "Checkout", invoice_order_path, class: "bg-blue-500 text-white px-4 py-2 rounded mt-4 inline-block hover:bg-blue-700" %>
