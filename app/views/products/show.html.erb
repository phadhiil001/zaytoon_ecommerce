<% content_for :title, @product.name %>

<div class="max-w-7xl w-full mx-auto px-10 mb-2">
  <%= link_to "Products", products_path, class: "text-xl" %>
</div>
<div class="mx-auto md:w-2/3 w-full flex flex-col md:flex-row">
  <div class="md:w-1/2">
    <% if @product.images.attached? %>
      <%= image_tag url_for(@product.images.first), class: "w-full h-auto object-cover rounded-lg hover:brightness-75 transition-all duration-300" %>
    <% else %>
      <div class="w-full h-48 bg-gray-200 mb-4"></div>
    <% end %>
  </div>
  <div class="md:w-1/2 md:pl-8">
    <h1 class="text-4xl font-bold mb-4"><%= @product.name %></h1>
    <p class="text-xl font-semibold text-gray-700 mb-4"><%= number_to_currency(@product.price) %></p>
    <p class="mb-4"><%= @product.description %></p>
    <% if @product.options.present? %>
      <p class="mb-4"><strong>Options:</strong> <%= @product.options.join(", ") %></p>
    <% end %>
    <% if @product.served_with.present? %>
      <p class="mb-4"><strong>Served With:</strong> <%= @product.served_with %></p>
    <% end %>
    <% if @product.pieces.present? %>
      <p class="mb-4"><strong>Pieces:</strong> <%= @product.pieces %></p>
    <% end %>
    <% if @product.extra.present? %>
      <p class="mb-4"><strong>Extra:</strong> <%= @product.extra %></p>
    <% end %>
    <%= link_to "Back to products", products_path, class: "ml-2 rounded-lg py-3 px-4 bg-gray-300 hover:bg-gray-400 text-gray-800" %>
  </div>
</div>
