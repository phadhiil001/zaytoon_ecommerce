                <div class="py-1" role="none">
                  <%= link_to "Edit profile", edit_user_registration_path, class: "text-gray-700 block px-4 py-2 text-sm" %>
                  <%= link_to "Orders", past_orders_orders_path, class: "text-gray-700 block px-4 py-2 text-sm" %>
                  <%= link_to "Sign out", destroy_user_session_path, method: :delete, data: { confirm: "Are you sure?" }, class: "text-gray-700 block px-4 py-2 text-sm" %>
