            <%= link_to "Sign up", new_user_registration_path, class: "text-gray-100 hover:bg-blue-600 hover:text-white px-3 py-2 rounded-md text-sm font-medium" %>
            <%= link_to "Log in", new_user_session_path, class: "text-gray-100 hover:bg-blue-600 hover:text-white px-3 py-2 rounded-md text-sm font-medium" %>
          <% end %>
        </div>
      </div>
      <div class="absolute inset-y-0 right-0 flex items-center sm:hidden">
